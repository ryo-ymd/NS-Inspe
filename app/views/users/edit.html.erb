<%= render 'users/header', user: @user  %>
<div class="tab-content">
  <div class="tab-pane active">
    <h3>アカウント情報変更</h3>
    <%= form_for @user do |f| %>
        <%= render 'shared/error_message',target: @user %>
        <%= f.label '表示名' %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>
        <%= f.submit '情報更新', class: 'btn btn-primary' %>
    <% end %>
    <p><%= link_to 'アカウントを削除する', user_path, confirm: '本当に削除しますか？', method: :delete %></p>
  </div>
</div>
