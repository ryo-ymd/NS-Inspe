<!DOCTYPE html>
<html>
  <head>
    <title>Inspe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="<%= root_path %>">インスペ</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'スペース一覧', spaces_path %></li>
          <li><a href="#">利用規約</a></li>
          <%= link_to login_path do %>
            <button type="button" class="btn btn-default navbar-btn">LogIn</button>
          <% end %>
          <%= link_to sign_up_path do %>
            <button type="button" class="btn btn-primary navbar-btn">Sign Up</button>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
